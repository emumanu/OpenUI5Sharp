// See all bridge.json configuration options at:
// https://github.com/bridgedotnet/Bridge/wiki/global-configuration

{
  // The folder to output JavaScript (.js) files.
  "output": "$(OutDir)/bridge/",

  // Set to "Minified" to generate .min.js files.
  // Set to "Both" to generate both minified and non-minified .js files.
  // "Formatted" generates non-minified .js files.
  "outputFormatting": "Both",

  // Set module support
  "loader": {
    "manualLoading": true
  },

  // Enable the Bridge Console.
  // Default is false.
  "console": {
    "enabled": false
  },

  // Enable browser debugging of C# files.
  // Default is false.
  "sourceMap": {
    "enabled": false
  },

  // Set to true to disable Reflection metadata generation.
  // Default is false.
  "reflection": {
    "disabled": false,
    "target": "Type"
  },

  // Generate TypeScript Definition (.d.ts) files.
  // Default is false.
  "generateTypeScript": false,

  // Delete everything from the output folder
  // Default is false
  "cleanOutputFolderBeforeBuild": true,

  // Set to true to enable bridge.report.log generation.
  // Default is false.
  "report": {
    "enabled": false
  },

  // Rules to manage generated JavaScript syntax.
  // Default is "Managed"
  "rules": {
    "anonymousType": "Plain",
    "arrayIndex": "Plain",
    "autoProperty": "Plain",
    "boxing": "Plain",
    "externalCast": "Plain",
    "inlineComment": "Plain",
    "integer": "Plain",
    "lambda": "Plain"
  },

  // Options to manage the output of JSDoc-compatible documentation in the generated JavaScript and TypeScript definition files.
  // Default is Basic
  "generateDocumentation": "Basic",

  // Options to manage JavaScript output folders and files.
  // Defaults to Project
  "outputBy": "ClassPath",

  "html": {
    "disabled": true
  }
}
